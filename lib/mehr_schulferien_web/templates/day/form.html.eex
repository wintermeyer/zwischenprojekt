<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :value, class: "control-label" %>
    <%= number_input f, :value, class: "form-control" %>
    <%= error_tag f, :value %>
  </div>

  <div class="form-group">
    <%= label f, :weekday, class: "control-label" %>
    <%= number_input f, :weekday, class: "form-control" %>
    <%= error_tag f, :weekday %>
  </div>

  <div class="form-group">
    <%= label f, :weekday_de, class: "control-label" %>
    <%= text_input f, :weekday_de, class: "form-control" %>
    <%= error_tag f, :weekday_de %>
  </div>

  <div class="form-group">
    <%= label f, :day_of_the_year, class: "control-label" %>
    <%= number_input f, :day_of_the_year, class: "form-control" %>
    <%= error_tag f, :day_of_the_year %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
